<header class="header">
  <div class="header__area">
    <a href="/" class="header__area-logo"></a>
    <div class="header__area-navi">
      <a href="#" class="header__area-navi__item"> About </a>
      <a href="/wargame" class="header__area-navi__item"> Wargame </a>
      <a href="/forum" class="header__area-navi__item"> Forum </a>
      <a href="#" class="header__area-navi__item"> CTF </a>
    </div>
    <div class="header__area-navi2">
      <% if(!user) { %>
      <a href="/auth/login" class="header__area-navi2__item"> 로그인 </a>
      <a href="/auth/join" class="header__area-navi2__item"> 가입 </a>
      <% } else { %>
      <a href="/auth/logout" class="header__area-navi2__item"> 로그아웃 </a>
      <% } %>
    </div>
    <div class="header__area-navi2">
      <div class="header__area-navi2__mobileMenu" onclick="funcDoMenu()"></div>
    </div>
  </div>

  <div class="header__slide">
    <div style="width: 100%; height: 6rem">
      <div
        class="header__area-navi2__mobileMenu"
        onclick="funcDoMenu()"
        style="float: right; margin-right: 3rem"
      ></div>
      <div
        class="header__slide-nav"
        style="
          /* background-color: yellow; */
          width: 100%;
          height: 40rem;
          clear: both;
        "
      >
        <a href="#">About</a>
        <a href="/wargame">Wargame</a>
        <a href="/forum">Forum</a>
        <a href="#">CTF</a>
        <% if(!user) { %>
        <a href="/auth/login">로그인</a>
        <a href="/auth/join">회원가입</a>
        <% } else { %>
        <a href="/auth/logout">로그아웃</a>
        <% } %>
      </div>
    </div>
  </div>
</header>
